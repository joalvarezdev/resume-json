---
import Section from "../Section.astro";

import { education } from "@cv";
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, url, studyType, startDate, endDate }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate == null
            ? new Date().getFullYear()
            : new Date(endDate).getFullYear();
        const years = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                  <h4>{studyType}</h4>
                </div>
                <time>{years}</time>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    font-weight: 400;
    color: #222;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 10px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
